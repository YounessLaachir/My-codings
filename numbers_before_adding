#include<iostream>
using namespace std;

int beforeresult(int num1, int num2)
{
    int result = 0;
    for(int i = 0; i <= num2 ; i++)
    {
        result += num1;
        cout << num1;
        num1--;
        if( i == num2)
        {
            cout << " = ";
            break;
        }
        if( i == num2)
        {
            cout << " = ";
            break;
        }
        cout << " + ";
    }
    return result;
}    
int main()
{
    cout << beforeresult(10, 5) << "\n";
    cout << beforeresult(15, 3) << "\n";
    return 0;
}
